<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h1>CONTACT US</h1>
        </div>
    </div>

    <br />

    <div class="row d-flex justify-content-md-center">
        <div class="col-md-9">
            <form class="form" id="contactForm" action="/contactSubmission" method="post">
                <div class="form-group">
                    <label for="nameInput" class="label font-weight-bold">NAME:</label>
                    <input type="name" class="form-control text-center" id="nameInput" placeholder="Name" />
                </div>
                <div class="form-group">

                    <label for="emailInput" class="label font-weight-bold">EMAIL ADDRESS:</label>

                    <input type="email" class="form-control text-center" id="emailInput"
                        placeholder="User@example.com" />
                </div>

                <div class="form-group">

                    <label for="messageArea" class="label font-weight-bold">MESSAGE:</label>
                    <textarea class="form-control text-center" id="messageInput" rows="5"
                        placeholder="Questions, comments, or any feedback..."></textarea>
                </div>
                <button id="submit" class="btn btn-secondary font-weight-bold">
                    Submit
                </button>
            </form>
            <div id="submitConfirm"></div>
        </div>
    </div>
</div>

{{!-- Form Submission SÃŸcript --}}
<script src="https://code.jquery.com/jquery-3.4.0.js" integrity="sha256-DYZMCC8HTC+QDr5QNaIcfR7VSPtcISykd+6eSmBW5qo=" crossorigin="anonymous"></script>
<script>
    $("#contactForm").submit(function (e) {
        var messageCat = $("#messageCat").val();
        var name = $("#nameInput").val();
        var email = $("#emailInput").val();
        var message = $("#messageInput").val();
        var data = { "messageCat": messageCat, "name": name, "email": email, "message": message };        
        e.preventDefault();
        $.ajax({
            url: "/contactSubmission",
            data: data,
            type: "post",
            success: function () {
                alert("success");
            }
        });
        //$("#messageCat").val();
        $("#contactForm").empty();
        $("#submitConfirm").append("Thank you. Your message has been delivered.");
    });
</script>

